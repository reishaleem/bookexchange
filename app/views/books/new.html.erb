<% provide(:title, 'Sell Book') %>
<div class="row align-items-center">
  <div class='col-md-8 mx-auto'>
    <div class='col-md-6 mx-auto new-form d-block p-5'>
      <h1 class='new-form-header text-center pb-4'>Sell a Book</h1>
      <%= form_for @book, :html => {:class => 'new_book'} do |form| %>
        <%= render 'shared/error_messages', object: form.object %>
        <div>
          <div class='inner-new-form'>
              <div class='form-row'>
                <div class='form-group col-md-11'>
                  <%= form.text_field :title, class: 'form-control', placeholder: 'Title' %>
                </div>
                <div class='form-group col-md-1'>
                  <%= form.text_field :edition, class: 'form-control', placeholder: 'ed.' %>
                </div>
              </div>
              <div class='form-group'>
                <%= form.text_field :author, class: 'form-control', placeholder: 'Author' %>
              </div>
              <div class='form-row'>
                <div class='form-group col-md-3'>
                  <%= form.text_field :isbn, class: 'form-control', placeholder: 'ISBN' %>
                </div>
                <div class='form-group col-md-4'>
                  <%= form.select :condition, [['Select condition...', nil], ['New', 'New'], ['Good', 'Good'], ['Fair', 'Fair'], ['Poor', 'Poor']], {}, class: "form-control" %>
                </div>
                <div class='form-group col-md-5'>
                  <%= form.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
                </div>
              </div>
              <div class='form-row'>
                <div class='form-group col-md-4'>
                  <%= form.text_field :professor, class: 'form-control', placeholder: 'Professor last name' %>
                </div>
                <div class='form-group col-md-4'>
                  <%= form.text_field :course, class: 'form-control', placeholder: 'Course (ex. CSE 3901)' %>
                </div>
                 <div class='form-group col-md-4'>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">$</div>
                        </div>
                        <%= form.text_field :price, class: 'form-control pl-1', placeholder: 'dd.cc' %>
                    </div>
                </div>
              </div>
              <div class='form-row'>
                <div class='col-md-12 text-center'>
                    <%= form.submit 'List Book', class: 'btn btn-submit-button-black' %>
                </div>
              </div>
              <hr />
              
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>

<script type="text/javascript">
  $('#user_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size for a picture is 5MB. Please choose a smaller file.');
    }
  });
</script>


 